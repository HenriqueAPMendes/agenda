<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Register</h1>
      <p class="text-center">Create your account on MyAgenda</p>

      <div class="row">
        <div class="col-lg">
          <h4>Register</h4>
          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email-login">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>

            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Password</label>
              <input type="password" class="form-control" id="exampleInputPassword1"name="password-login">
            </div>

            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Confirm your password</label>
              <input type="password" class="form-control" id="exampleInputPassword1" name="password-login-confirm">
            </div>
            
            <%- include('includes/messages') %>
            

            <button type="submit" class="btn btn-primary">Create</button>
          </form>
        </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>