<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">MyAgenda</h1>
      <p class="text-center">Your contacts</p>
      <p class="text-center"><a href="/user/addcontact"> Add a contact </a></p>
      <%- include('includes/messages') %>

      <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Search for contacts" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>

      <div class="responsive-table">
        <table class="table my-2">

          <% for (let contact of contacts){ %>
            <tr>
              <td><%= contact.firstName %></td>
              <td><%= contact.lastName %></td>
              <td><%= contact.phone %></td>
              <td><%= contact.email %></td>
              <td><%= contact.creationDat %></td>
              <td><a href="/user/editcontact/<%=contact._id%>">Edit</a></td>
              <td><a class="text-danger" href="/user/deletecontact/<%=contact._id%>">Delete</a></td>
            </tr>
          <% } %>
        </table>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>